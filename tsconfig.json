{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/components/bible",
    "src/components/journeys",
    "src/components/story",
    "src/hooks/useVerseLinks.ts",
    "src/hooks/useMapSync.ts",
    "src/hooks/useJourneyAnimation.ts",
    "src/services/bibleService.ts",
    "src/services/journeyService.ts",
    "src/services/locationService.ts",
    "src/utils/mapHelpers.ts"
  ]
}